<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tic Tac Toe</title>
    <style>
      body {
        font-family: sans-serif;
        background-color: #f2f2f2;
      }

      #game-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      table {
        border-collapse: collapse;
        box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.2);
      }

      td {
        width: 100px;
        height: 100px;
        text-align: center;
        vertical-align: middle;
        font-size: 72px;
        font-weight: bold;
        border: 1px solid black;
        background-color: #fff;
        cursor: pointer;
        transition: background-color 0.2s;
      }

      td:hover {
        background-color: #e6e6e6;
      }

      td[data-value="X"] {
        color: #ff6666;
      }

      td[data-value="O"] {
        color: #66b3ff;
      }
    </style>
  </head>
  <body>
    <div id="game-container">
      <table>
        <tr>
          <td data-row="0" data-col="0"></td>
          <td data-row="0" data-col="1"></td>
          <td data-row="0" data-col="2"></td>
        </tr>
        <tr>
          <td data-row="1" data-col="0"></td>
          <td data-row="1" data-col="1"></td>
          <td data-row="1" data-col="2"></td>
        </tr>
        <tr>
          <td data-row="2" data-col="0"></td>
          <td data-row="2" data-col="1"></td>
          <td data-row="2" data-col="2"></td>
        </tr>
      </table>
    </div>
    <script>
      const cells = document.querySelectorAll("td");
      let currentPlayer = "X";

      function togglePlayer() {
        currentPlayer = currentPlayer === "X" ? "O" : "X";
      }

      function handleCellClick() {
        if (this.getAttribute("data-value")) {
          return;
        }

        this.setAttribute("data-value", currentPlayer);
        this.textContent = currentPlayer;
        togglePlayer();
      }

      cells.forEach(cell => {
        cell.addEventListener("click", handleCellClick);
      });
    </script>
  </body>
</html>
